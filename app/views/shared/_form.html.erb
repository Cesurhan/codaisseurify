<div class="col-md-6">
  <%= form_for [@artist, @song] do |f|%>
  <div class="form-group">
    <%= f.label "Add New Song:"%>
    <%= f.text_field :title,  :class => 'form-control', :placeholder => 'Title',  autocomplete: "off" %>
  </div>

  <hr>
  <div class="actions">
    <%= link_to "Back", artists_path, class: "btn btn-default" %>
    <%= f.submit (@song.new_record? ? "Add" : "Update"), :class => "btn btn-primary" %>
  </div>
  <% end %>
</div>
