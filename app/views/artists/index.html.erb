<h1>All Artists:</h1>
<hr>

<div class="row">
  <% @artists.each do |artist| %>
  <div class="col-sm-6 col-md-4">

    <div class="thumbnail">
      <% if artist.photos.any?%>
      <% artist.photos.each do |photo| %>
      <%= image_tag photo.image, style: 'width:50%'%>
      <%end%>
      <%else%>
      <img
        src="data:image/svg+xml;base64,">
      <%end%>
      <div class="caption">
        <h3><%="#{artist.first_name} #{artist.last_name}"%></h3>
        <%= link_to "View", artist, class: "btn btn-info" %>
      </div>
    </div>

  </div>
  <%end%>
</div>
